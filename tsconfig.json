{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": [
      "@dcloudio/uni-app",
      "@dcloudio/types",
      "@uni-helper/uni-types",
      "wot-design-uni/global",
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#/*": [
        "./types/*"
      ]
    }
  },
  "vueCompilerOptions": {
    "plugins": [
      "@uni-helper/uni-types/volar-plugin"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "unpackage",
    "test",
    "dist",
    ".history"
  ]
}