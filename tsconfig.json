{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "es6",
      "dom"
    ],
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": [
      "@dcloudio/types",
      "@types/lodash-es",
      "@vue-macros/reactivity-transform/macros-global",
      "vite/client"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "types/**/*.d.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", ".history"]
}
