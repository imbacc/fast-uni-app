<view bind:__l="__l"><view class="logo"><view class="img"><image mode="widthFix" src="../../static/HM-login/img/log.png"></image></view></view><view class="form"><view class="username"><view data-event-opts="{{[['tap',[['getCode']]]]}}" class="get-code" style="{{'color:'+(getCodeBtnColor)+';'}}" catchtap="__e">{{getCodeText}}</view><input placeholder="请输入手机号" placeholder-style="color: rgba(255,255,255,0.8);" data-event-opts="{{[['input',[['__set_model',['$0','phoneNumber','$event',[]],['']]]]]}}" value="{{phoneNumber}}" bindinput="__e"/></view><view class="code"><input placeholder="请输入验证码" placeholder-style="color: rgba(255,255,255,0.8);" data-event-opts="{{[['input',[['__set_model',['$0','code','$event',[]],['']]]]]}}" value="{{code}}" bindinput="__e"/></view><view class="password"><input placeholder="请输入密码" password="true" placeholder-style="color: rgba(255,255,255,0.8);" data-event-opts="{{[['input',[['__set_model',['$0','passwd','$event',[]],['']]]]]}}" value="{{passwd}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['doReset',['$event']]]]]}}" class="btn" bindtap="__e">重置密码</view></view></view>